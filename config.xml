<?xml version="1.0" encoding="UTF-8"?>

<!-- The Template core element. This element is mandatory -->
<Template xmlns="http://wirecloud.conwet.fi.upm.es/ns/template#">

    <!-- Catalog.ResourceDescription element. This element defines the core metadata of the widget -->
    <Catalog.ResourceDescription>
        <Vendor>CoNWeT</Vendor>
        <Name>CKAN Resource Selector</Name>
        <Version>1.0.0</Version>
        <DisplayName>CKAN Resource Selector</DisplayName>
        <Author>amagan</Author>
        <Mail>amagan@conwet.com</Mail>
        <Description>A widget that allows you to choose between the different resources availables in a CKAN instance</Description>
        <ImageURI>images/ckan.png</ImageURI>
        <WikiURI>doc/index.html</WikiURI>
    </Catalog.ResourceDescription>

    <!-- Platform.Preferences element. It defines user preferences -->
    <Platform.Preferences>
        <Preference name="ckan_server" type="text" description="CKAN Server URL" label="CKAN Server URL" default="http://perseo.ls.fi.upm.es:8080"/>
    </Platform.Preferences>

    <!-- Platform.StateProperties element. It defines user preferences -->
    <Platform.StateProperties>
    </Platform.StateProperties>

    <!-- Platform.Wiring element. It defines both the widget inputs and outputs -->
    <Platform.Wiring>
        <OutputEndpoint name="resource" 
                        type="text" 
                        label="Resource"
                        description="The resource (a JSON including the structure and the data)"
                        friendcode="dataset"/>
    </Platform.Wiring>

    <!-- Platform.Link element. It binds the template with the actual widget's source code. -->
    <Platform.Link>
        <!-- XHTML element. It has the href attribute that links to the source code of the widget. -->
        <!--                contenttype and cacheable attributes are optional -->
        <XHTML href="index.html" contenttype="text/html" cacheable="false" use-platform-style="true"/>

    </Platform.Link>

    <!-- Platform.Rendering element. It specifies the default width and height of the widget -->
    <Platform.Rendering width="5" height="27"/>

</Template>